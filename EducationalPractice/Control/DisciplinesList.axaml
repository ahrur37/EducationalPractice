<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EducationalPractice.Control.DisciplinesList">
     <Grid Grid.Column="1" RowDefinitions="Auto, *, Auto">
         <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
             <TextBlock Text="Поиск по названию дисциплины:" VerticalAlignment="Center" FontSize="14"/>
             <TextBox Name="SearchBox"
                      TextChanged="SearchBox_TextChanged"
                      Width="250"
                      Height="35"/>

             <ComboBox Name="DepartmentFilter"
                       PlaceholderText="Фильтр по кафедре"
                       SelectionChanged="DepartmentFilter_SelectionChanged"
                       Width="250"
                       Height="35"/>
         </StackPanel>
         <DataGrid  DoubleTapped="DataGrid_DoubleTapped" IsReadOnly="True" x:Name="DataGridItems" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Код дисциплины" Binding="{Binding Code}"/>
                    <DataGridTextColumn Header="Дисциплина" Binding="{Binding NameDisc}"/>
                    <DataGridTextColumn Header="Кол-во часов" Binding="{Binding Hours}"/>
                    <DataGridTextColumn Header="Кафедра" Binding="{Binding IdDepartNavigation.NameDepart}"/>
                    
                    <DataGridTemplateColumn Header="Удалить дисциплину" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="DeleteButton_Click" Name="DeleteBtn" Content="🗑️"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button Content="Добавление" Name="AddBtn"  Click="AddButton_Click" HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>
</UserControl>
