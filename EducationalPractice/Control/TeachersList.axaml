<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EducationalPractice.Control.TeachersList">
     <Grid Grid.Column="1" RowDefinitions="Auto, *, Auto">
         <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5" VerticalAlignment="Center" Margin="0,5">
             <TextBlock Text="Поиск по ФИО:" VerticalAlignment="Center" FontSize="14"/>
             <TextBox Name="SearchBox"
                      TextChanged="SearchBox_TextChanged"
                      Width="200"/>

             <TextBlock Text="Мин. зарплата:" VerticalAlignment="Center" FontSize="14"/>
             <TextBox Name="MinSalaryBox"
                      TextChanged="MinSalary_TextChanged"
                      Width="120"/>

             <TextBlock Text="Макс. зарплата:" VerticalAlignment="Center" FontSize="14"/>
             <TextBox Name="MaxSalaryBox"
                      TextChanged="MaxSalary_TextChanged"
                      Width="120"/>
         </StackPanel>
         <DataGrid  DoubleTapped="DataGrid_DoubleTapped" IsReadOnly="True" x:Name="DataGridTeachers" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding TabNumberNavigation.Fullname}"/>
                    <DataGridTextColumn Header="Звание" Binding="{Binding Rank}"/>
                    <DataGridTextColumn Header="Степень" Binding="{Binding Degree}"/>
                    <DataGridTextColumn Header="Зарплата" Binding="{Binding TabNumberNavigation.Salary}"/>
                    
                    <DataGridTemplateColumn Header="Уволить" Width="93">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="DeleteButton_Click" Name="DeleteBtn" Content="🗑️"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button Content="Добавление" Name="AddBtn"  Click="AddButton_Click" HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>
</UserControl>
