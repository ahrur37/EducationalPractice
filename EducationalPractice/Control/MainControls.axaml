<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EducationalPractice.Control.MainControls">
    <Grid RowDefinitions="Auto, *">
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            
            <Button Margin="5" Content="Преподы" Click="Button_Click_Teachers" Name="TeachersBtn"/>
            <Button Content="Дисциплины" Margin="5" Click="Button_Click_Disciplines" Name="DisciplinesBtn"/>
            <Button Content="Экзамены" Margin="5" Click="Button_Click_Exams" Name="ExamsBtn"/>
            <Button Content="Студенты" Margin="5" Click="Button_Click_Students" Name="StudentsBtn"/>
            
            <Button Content="Выход" Click="Exit_Click"/>
        </StackPanel>
        <ContentControl Grid.Row="1" Margin="2" BorderBrush="Wheat" BorderThickness="1" x:Name="MainControl"/>
    </Grid>
</UserControl>
