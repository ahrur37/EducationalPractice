<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="EducationalPractice.Views.CreateAndChangeDisciplines"
        Title="Редактирование дисциплины"
        Width="500" Height="600"
        MinWidth="400" MinHeight="500"
        Background="#F8FAFC">
    
    <Border Margin="20" 
            Padding="30"
            Background="White"
            CornerRadius="12">
        
        <!-- Тень (через BlurEffect или Border) -->
        <Border.OpacityMask>
            <SolidColorBrush Color="Black"/>
        </Border.OpacityMask>
        <Border.Effect>
            <DropShadowEffect Color="#A0C4E0" Opacity="0.3" BlurRadius="10"/>
        </Border.Effect>

        <StackPanel Spacing="16">
            
            <!-- Заголовок формы -->
            <TextBlock Text="Редактирование дисциплины"
                       FontSize="24"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Foreground="#1E293B"
                       Margin="0,0,0,24"/>

            <!-- Код дисциплины -->
            <TextBlock Text="Код дисциплины" 
                       FontSize="14" 
                       Foreground="#334155"/>
            <TextBox Width="300"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     Name="CodeText"
                     Text="{Binding Code}"
                     BorderThickness="1.5"
                     BorderBrush="#CBD5E1"
                     Background="#FEFFFF"
                     CornerRadius="6"/>

            <!-- Нагрузка в часах -->
            <TextBlock Text="Нагрузка в часах" 
                       FontSize="14" 
                       Foreground="#334155"/>
            <TextBox Width="300"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     Name="HoursText"
                     Text="{Binding Hours}"
                     BorderThickness="1.5"
                     BorderBrush="#CBD5E1"
                     Background="#FEFFFF"
                     CornerRadius="6"/>

            <!-- Название дисциплины -->
            <TextBlock Text="Название дисциплины" 
                       FontSize="14" 
                       Foreground="#334155"/>
            <TextBox Width="300"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     Name="NameDiscText"
                     Text="{Binding NameDisc}"
                     BorderThickness="1.5"
                     BorderBrush="#CBD5E1"
                     Background="#FEFFFF"
                     CornerRadius="6"/>

            <!-- Факультет -->
            <TextBlock Text="Факультет" 
                       FontSize="14" 
                       Foreground="#334155"/>
            <ComboBox Name="ComboDepart"
                      Width="300"
                      Height="40"
                      FontSize="16"
                      Background="White"
                      BorderThickness="1.5"
                      BorderBrush="#CBD5E1"
                      CornerRadius="6"
                      HorizontalAlignment="Center">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding NameDepart}" FontWeight="Medium"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Content="Сохранить"
                    Click="SaveButton"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Height="45"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Stretch"
                    Background="#1E40AF"
                    Foreground="White"
                    CornerRadius="8">
            </Button>

        </StackPanel>
    </Border>
</Window>